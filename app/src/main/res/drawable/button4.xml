<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval" >
    <corners
        android:radius="14dp"
        />
    <gradient
        android:angle="45"
        android:centerX="35%"
        android:endColor="#EC0A12"
        android:centerColor="#DA39D1"
        android:startColor="#D8B105"
        android:type="linear"
        />
    <padding
        android:left="3dp"
        android:top="3dp"
        android:right="3dp"
        android:bottom="3dp"
        />
    <size
        android:width="200dp"
        android:height="70dp"
        />
    <stroke
        android:width="3dp"
        android:color="#878787"
        />
</shape>